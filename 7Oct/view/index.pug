doctype html
html
    head
        meta(charset="utf-8")
        title= title
    body
        include head.pug
        h1= message
        hr
        a(href="#"): img
        ul#menu.myclass
            each n in numbers
                li=n
        script.
            let num = 8;
            if( num < 10 )
                console.log(`${num} < 10`)
            else
                console.log(`${num} > 10`)

        - let count = 0;
        ul
            while count < 13
                li= count++
        include footer.pug